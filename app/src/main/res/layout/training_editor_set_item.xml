<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainingModifySetItemCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trainingModifySetItemRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivDeteleSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tvTrainingMSetNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTrainingMSetNumber"
            app:srcCompat="@drawable/ic_delete_item" />

        <TextView
            android:id="@+id/tvTrainingMSetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/spSetRepetitions"
            app:layout_constraintEnd_toStartOf="@+id/spSetRepetitions"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/ivDeteleSet"
            app:layout_constraintTop_toTopOf="@+id/spSetRepetitions" />

        <Spinner
            android:id="@+id/spSetRepetitions"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/etSetWeight"
            app:layout_constraintEnd_toStartOf="@+id/etSetWeight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvTrainingMSetNumber"
            app:layout_constraintTop_toTopOf="@+id/etSetWeight"
            app:layout_constraintVertical_bias="0.625" />

        <EditText
            android:id="@+id/etSetWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/cbBodyWeight"
            app:layout_constraintEnd_toStartOf="@+id/cbBodyWeight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/spSetRepetitions"
            app:layout_constraintTop_toTopOf="@+id/cbBodyWeight" />

        <CheckBox
            android:id="@+id/cbBodyWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/etSetWeight"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>