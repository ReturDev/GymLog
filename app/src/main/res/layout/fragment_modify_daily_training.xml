<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modDTrainingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.training.dailytraining.ModifyDailyTrainingFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glModDTrainingEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/horizontal_margin_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glModDTrainingTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/vertical_margin_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glModDTrainingBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/vertical_margin_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glModDTrainingBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/horizontal_margin_guideline" />

    <include
        android:id="@+id/trainingSelectedLayout"
        layout="@layout/training_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/glModDTrainingEnd"
        app:layout_constraintStart_toStartOf="@+id/glModDTrainingBegin"
        app:layout_constraintTop_toTopOf="@+id/glModDTrainingTop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvModDTrainingTrainings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintBottom_toTopOf="@+id/btnEditDailyTraining"
        app:layout_constraintEnd_toStartOf="@+id/glModDTrainingEnd"
        app:layout_constraintStart_toStartOf="@+id/glModDTrainingBegin"
        app:layout_constraintTop_toBottomOf="@+id/trainingSelectedLayout" />

    <Button
        android:id="@+id/btnEditDailyTraining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_selection_daily_training"
        app:layout_constraintBottom_toTopOf="@+id/tvNewTraining"
        app:layout_constraintEnd_toStartOf="@+id/glModDTrainingEnd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/glModDTrainingBegin" />

    <TextView
        android:id="@+id/tvNewTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear nuevo Entrenamiento"
        app:layout_constraintBottom_toTopOf="@+id/glModDTrainingBottom"
        app:layout_constraintEnd_toStartOf="@+id/glModDTrainingEnd"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/glModDTrainingBegin" />

    <ProgressBar
        android:id="@+id/pbModDTainingLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rvModDTrainingTrainings"
        app:layout_constraintEnd_toStartOf="@+id/glModDTrainingEnd"
        app:layout_constraintStart_toStartOf="@+id/rvModDTrainingTrainings"
        app:layout_constraintTop_toTopOf="@+id/rvModDTrainingTrainings" />

</androidx.constraintlayout.widget.ConstraintLayout>