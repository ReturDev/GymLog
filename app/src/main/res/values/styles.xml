<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccessTitle">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChangerAccessLabel">
        <item name="android:textColor">@color/label_selector</item>
    </style>

    <style name="CardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">5dp</item>
    </style>

    <style name="CardTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="NestedCardLayoutEditTextStyle" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/nested_textfield_filled_background_color</item>
        <item name="boxStrokeColor">@color/nested_textfield_stroke_color</item>
        <item name="android:textColorHint">@color/nested_textfield_label_color</item>
        <item name="hintTextColor">@color/nested_textfield_label_color</item>

    </style>

    <style name= "NestedCardEditTextTheme" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="colorControlActivated">?attr/colorTertiary</item>
    </style>

    
    <style name="TrainingNameTextStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="HomeTrainingNameStyle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/amaranth_bold</item>
    </style>

    <style name="NormalTextAppearance" parent="TextAppearance.Material3.HeadlineSmall">

    </style>

    <style name="HomeFloatingButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="maxImageSize">32dp</item>
    </style>

    <style name="AddTrainingFloatingBtnStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="fabCustomSize">65dp</item>
        <item name="maxImageSize">40dp</item>
    </style>

    <style name="RemoveTrainingButtonStyle" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">?attr/colorTertiary</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
    </style>

    <style name="NestedCardStyle" parent="CardViewStyle">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
    </style>

    <style name="NestedCardIconButtonStyle" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
    </style>

    <style name="NestedCardTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name= "DescriptionStyle">
        <item name="android:background"> @drawable/description_background</item>
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
        <item name="android:padding">@dimen/description_padding</item>
        <item name="android:layout_marginRight">@dimen/margin_card</item>
        <item name="android:layout_marginLeft">@dimen/margin_card</item>
    </style>

    <style name="ButtonSelectorExerciseCreator" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:background">@drawable/exercise_creator_button_selector_background</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>